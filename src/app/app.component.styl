@import '../styles.styl';

.header
  padding: 16px 0;
  background: rgb(40,56,134);
  background: -moz-radial-gradient(center, ellipse cover,  rgba(40,56,134,1) 0%, rgba(25,9,116,1) 100%);
  background: -webkit-radial-gradient(center, ellipse cover,  rgba(40,56,134,1) 0%,rgba(25,9,116,1) 100%);
  background: radial-gradient(ellipse at center,  rgba(40,56,134,1) 0%,rgba(25,9,116,1) 100%);
  box-shadow 0px 0px 2px 2px #5C7AA7
  z-index 1
  &__center
    max-width maxWidth
    padding 0px 10px
    margin 0 auto
    box-sizing border-box
  &__logo
    width: 234px;
.main
  position relative
  display flex
  max-width maxWidth
  margin 0 auto
  box-sizing border-box
  padding-top 25px
  padding-left: 1.5%;
  padding-right: 1.5%;
  align-items: flex-start;
.aside
  max-width: 303px;
  width: 100%;
  margin-left: 0.5%;
  margin-right: 0.5%;
  box-shadow: rgba(0,0,0,0.29) 0px 1px 2px 0px, rgba(0,0,0,0.13) 0px 0px 2px 0px;
  box-sizing border-box
  &__title
    padding: 9px 18px 12px 18px;
    background-color white
    margin-bottom 4px;
    &_sm
      text-align center
      padding: 9px 18px 12px 18px;
      background-color: #fff;
      margin-bottom: 4px;
      color blue_txt
      cursor: pointer;
    &__caret__icon
      width: 20px;
      text-align: right;
      vertical-align middle
.filters
  margin-bottom 4px;
  &__name
    padding: 16px 18px 9px 18px;
    margin-bottom 4px
    background-color white
    &__up
      display flex
      color blue_txt
      margin-bottom: 16px;
    &__search-icon
      width: 16px;
      margin-right: 7px;
    &__txt1
      font-family: Lato-bold;
      font-size: 14px;
      font-size: 0.875em;
      flex: 1 1 auto;
    &__caret-icon
      display none
      width: 20px;
      text-align: right;
      cursor pointer
    &__down
      display flex
      justify-content: space-between;
      position relative
    &__cont-input
      width: 170px;
      height: 32px;
      box-sizing: border-box;
    &__input
      width 100%
      height 100%
      box-sizing border-box
      padding: 0 8px;
      font-size 14px
      font-size 0.875em
    &__error-msg
      position: absolute;
      width: 200px;
      font-size: 12px;
      color: rgba(255,0,0,0.8);
      top: -15px;
      left: 0;
    &__btn-send
      color white
      background-color blue_primary
      width 74px
      border none
      outline none
      font-family: Lato-bold;
      border-radius: 2px;
      line-height: 0;
      cursor: pointer;
      transition 0.2s ease-in-out
      &:hover
        background-color blue_txt
  &__stars
    padding: 16px 18px 9px 18px;
    background-color white
    margin-bottom 4px;
    &__up
      display: -webkit-box;
      display: -ms-flexbox;
      display: flex;
      color: blue_txt;
      margin-bottom: 16px;
      align-items: center;
    &__star-icon
      width: 16px;
      margin-right: 7px;
      &__icon
        width: 16px;
        margin-right: 7px;
    &__txt1
      font-family: Lato-bold;
      font-size: 14px;
      font-size: 0.875em;
      flex: 1 1 auto;
    &__caret-icon
      display none
    &__down
      color inherit
    &__list
      display: flex;
      flex-direction: column-reverse;
    &__line
      display flex
      align-items center
      margin-bottom: 10px;
    &__checkbox
      margin-right 7px
      &__input
        color inherit
    &__txt
      color grey_3
      font-size 14px
      font-size: 0.875em;
    &__stars
      color yellow_primary
      display: flex;
    &__star
      color inherit
      &-icon
        width: 16px;
        margin-right: 7px;
.content
  flex 1 1 auto
  margin-left: 0.5%;
  margin-right: 0.5%;
  &__contain-hotel
    box-shadow rgba(0,0,0,0.29) 0px 1px 2px 0px, rgba(0,0,0,0.13) 0px 0px 2px 0px
    box-sizing border-box
    background-color white
    margin-bottom 14px
  &__msn-no-hotels
    color orange_primary
    font-size: 20px;
    font-family: Lato-bold;
    text-align: center;
    
@media (max-width: 980px)
  .u-show-sm
    display block
  .u-show-sm_flex
    display flex
  .u-show-lg
  .u-show-lg_flex
    display none
  .header
    padding 10px
    &__logo
      width 200px
  .main
    flex-direction column
    padding-top 14px
    align-items center
    max-width 520px
  .aside
    margin-bottom 14px
    max-width none
  .filters
    &__name
      &__cont-input
        width 100%
        margin-right 20px
        box-sizing border-box
      &__btn-send
        width 120px
  .content
    width 100%
    margin-left 0
    margin-right 0
@media (min-width: 981px)
  .u-show-sm
  .u-show-sm_flex
    display none
  .u-show-lg
    display block
  .u-show-lg_flex
    display flex